<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinSocietyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="220dp"
            android:src="@drawable/societypic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:text="Join Society"
            android:textColor="#0d6e6a"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/memberNameEdtJoin"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/forget"
            android:hint="member Name"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registrationNumberEdtJoin"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/forget"
            android:hint="registration Number"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ageEdtjoin"
            android:layout_width="350dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/forget"
            android:hint="age"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/societyIdEdtJoin"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/forget"
            android:hint="Society Id"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/JoinBtnJoin"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"
            android:text="Join"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>